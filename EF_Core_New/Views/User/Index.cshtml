@{
    ViewData["Title"] = "Demo Js Grid";
}
<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.css" />
<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid-theme.min.css" />

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>

<h3>Using Ajax Call</h3>
<div id="demoJsGrid"></div>
<script>
    $("#demoJsGrid").jsGrid({
        width: "100%",
        height: "400px",

        inserting: true,
        editing: true,
        sorting: true,
        paging: true,
        autoload: true,

        controller: {
            loadData: function (filter) {
                debugger;
                return $.ajax({
                    type: "GET",
                    url: "/User/GetMyUser",
                    data: filter
                });
                console.log(filter);
            },
            insertItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/User/Submit",
                    data: item
                });
            },
            updateItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/User/Submit",
                    data: item
                });
            },
            deleteItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/User/DeleteUser",
                    data: item
                });
            },
        },
      
        fields: [
            { name: "name", type:"text", width: 200 },
            { name: "email", type: "text", width: 200 },
            { name: "password", type: "text", width: 200 },
            { name: "mobile", type: "text", width: 200 },
            { name: "createdDate", type: "text", width: 200 },
            { name: "createdBy", type: "text", width: 200 },
            { name: "lastUpdatedDate", type: "text", width: 200 },
            { type: "control", width:100 }
        ]
    });
  
</script>